$color-default = rgba(0, 0, 0, 0.65)
$color-primary = #41b883
$color-flamingo = #ff5722
$color-bismark = #557280
$color-border = rgba(0, 0, 0, 0.12)

$font-size-title = 18px
$font-size-normal = 15px
$font-size-sm = 12px
$vl-padding-md = 15px
$vl-margin-md = 10px
$vl-margin-lg = 20px

$box-shadow-container = 0 2px 8px rgba(0, 0, 0, .09)

$colors = primary flamingo
getColor(color, amount = 0)
    if color == primary
        return lighten($color-primary, amount)
    else if color == flamingo
        return lighten($color-flamingo, amount)

@import "../../styles/base.styl"

#vl-message-box
    position fixed
    top 0
    left 50%
.vl-message
    transition all .5s
    transform translate(-50%, 0)
    margin-top 10px
    padding .6rem 1rem
    background-color darkgrey
    box-shadow $box-shadow-container
    min-width 150px
    text-align center

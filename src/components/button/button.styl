@import "../../styles/base.styl"

$background-color-default = #efefef

.vl-button
    border 0
    outline none
    padding 5px 15px
    color $color-default
    box-shadow 0 0 0 0 #b5b5b514
    transition all .2s
    background-color $background-color-default
    cursor pointer

    &:hover
        background-color rgb(177 177 177)
        color #ffffff

.vl-button-active {
    box-shadow 0 0 5px 2px rgba(197, 197, 197, 0.5)
}

.vl-button-disabled
    cursor not-allowed
    opacity 0.6

    &:hover
        background-color $background-color-default
        color $color-default

.vl-button-round
    border-radius 1.5rem

.vl-button-circle
    border-radius 50%
    padding 0
    width 30px
    height 30px

for color in $colors
    .vl-button-{color}
        color white
        background-color getColor(color)

        &:hover
            background-color getColor(color)
            opacity 0.7

.vl-button-outline
    border 1px solid $color-default
    background-color transparent

    &:hover
        background-color transparent
        border 1px solid $color-primary
        color $color-primary

.vl-button-outline.vl-button-active
    box-shadow 0 0 5px 2px rgba(197, 197, 197, 0.3)

for color in $colors
    .vl-button-outline.vl-button-{color}
        border 1px solid getColor(color)
        color getColor(color)

.vl-button-link
    background-color transparent
    padding 5px 10px

    &:hover
        background-color transparent
        color $color-primary

for color in $colors
    .vl-button-link.vl-button-{color}
        color getColor(color)

.vl-button-link.vl-button-disabled
    &:hover
        color $color-default

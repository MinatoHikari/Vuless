$background-color-default = #efefef
$color-default = rgba(0, 0, 0, .65)
$color-primary = #41b883
.sd-button
    border 0
    outline none
    padding 5px 15px
    color $color-default
    box-shadow 0 0 0 0 #b5b5b514
    transition all .2s
    background-color $background-color-default
    cursor pointer

    &:hover
        background-color rgb(177 177 177)
        color #ffffff

.sd-button-active {
    box-shadow 0 0 5px 2px rgba(197, 197, 197, 0.5)
}

.sd-button-disabled
    cursor not-allowed
    //pointer-events: none;
    opacity 0.6

    &:hover
        background-color $background-color-default
        color $color-default

.sd-button-primary
    color white
    background-color $color-primary

    &:hover
        background-color $color-primary
        opacity 0.7

.sd-button-round
    border-radius 1.5rem

.sd-button-circle
    border-radius 50%
    padding 0
    width 30px
    height 30px

.sd-button-outline
    border 1px solid $color-default
    background-color transparent

    &:hover
        background-color transparent
        border 1px solid $color-primary
        color $color-primary

.sd-button-outline.sd-button-primary
    border 1px solid $color-primary
    color $color-primary

.sd-button-outline.sd-button-active
    box-shadow 0 0 5px 2px rgba(197, 197, 197, 0.3)

.sd-button-link
    background-color transparent
    padding 5px 10px

    &:hover
        background-color transparent
        color $color-primary

.sd-button-link.sd-button-primary
    color $color-primary

.sd-button-link.sd-button-disabled
    &:hover
        color $color-default
